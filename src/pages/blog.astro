---
import BaseLayout from '../layouts/Layout.astro'
const allPosts = await Astro.glob('../pages/blog/*.mdx')
const sortedPosts = allPosts.sort((a, b) => Date.parse(b.frontmatter.pubDate) - Date.parse(a.frontmatter.pubDate))
const pageTitle = "Articles"
---

<BaseLayout title={pageTitle}>
  <h2>Articles</h2>
  {sortedPosts.map((post) => 
    <h3>
      <a href={post.url}>{post.frontmatter.title}</a>
    </h3>
    <p class="text-sm">{new Date(post.frontmatter.pubDate).toLocaleDateString()}</p>
    )}
</BaseLayout>